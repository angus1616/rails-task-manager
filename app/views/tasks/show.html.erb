<div class="d-flex flex-column align-items-center">
  <h1>Task</h1>
  <div class="card card-show" style="width: 18rem;">
    <div class="card-body">
      <h1 class="card-title"><%= @task.title %></h1>
      <p class="card-text"><%= @task.details %>.</p>
      <%=  link_to "home", tasks_path, class: "btn btn-primary" %>
      <%=  link_to "edit", edit_task_path(@task), class: "btn btn-primary" %>
      <%= link_to "delete", task_path(@task), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
