<div class="task-container">
  <h1>My Tasks</h1>
  <%= link_to "create", new_task_path, class: "btn btn-primary" %>
    <% @tasks.each_with_index do |task, index| %>
    <div class="d-flex align-items-center">
      <div class="card card-home" style="width: 18rem;" >
        <ul class="list-group list-group-flush">
          <h3 class="list-group-item"><%= link_to task.title, task_path(task.id)%></h3>
        </ul>
      </div>
       <input type="checkbox" id="scales" name="scales" unchecked= <%task.completed%>>
        <label for="scales"></label>
      </div>
  <% end %>
</div>
